    "aes-js": "^3.1.2",
    "assert": "^2.0.0",
    "base64url": "^3.0.1",
    "bech32": "^2.0.0",
    "bn.js": "^5.2.1",
    "buffer": "^6.0.3",
    "canonical-weth": "^1.4.0",
    "chai": "^4.2.0",
    "cross-fetch": "^3.1.5",
    "emasm": "https://github.com/kungfuflex/emasm",
    "ethers": "^6.3.0",
    "evmdis": "https://github.com/kungfuflex/evmdis",
    "is-browser": "^2.1.0",
    "libp2p": "^0.36.2",
    "libp2p-bootstrap": "^0.14.0",
    "libp2p-crypto": "^0.21.2",
    "libp2p-gossipsub": "^0.13.0",
    "libp2p-kad-dht": "^0.28.6",
    "libp2p-mplex": "^0.10.7",
    "libp2p-noise": "^4.0.0",
