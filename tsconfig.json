{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "skipLibCheck": true,
      "moduleResolution": "node",
      "target": "es6",
      "noImplicitAny": false,
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "./lib",
      "declaration": true,
      "resolveJsonModule": true,
      "types": ["node"]
    },
    "include": ["./src.ts/*"],
    "exclude" : ["./scripts/*"]
  }